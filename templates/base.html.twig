<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}WalDrive - Taxi Management{% endblock %}</title>
    
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Clicker+Script&family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- FontAwesome 6 -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    
    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        'primary': '#3B82F6',
                        'primary-dark': '#2563EB',
                        'dark': '#0f172a',
                    },
                    fontFamily: {
                        'script': ['Clicker Script', 'cursive'],
                        'sans': ['Poppins', 'sans-serif'],
                    }
                }
            }
        }
    </script>
    
    <!-- AOS Animations -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet">
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    
    <style>
        body {
            font-family: 'Poppins', sans-serif;
            background: #f8fafc;
        }
        
        .logo-w {
            font-family: 'Clicker Script', cursive;
            font-size: 2.5rem;
            color: #3B82F6;
            line-height: 1;
            text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        }
        
        .btn-primary {
            background: #3B82F6;
            color: #fff;
            font-weight: 600;
            transition: all 0.2s;
        }
        .btn-primary:hover {
            background: #2563EB;
            box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
        }
        
        .btn-secondary {
            background: #0f172a;
            color: #fff;
            font-weight: 500;
            transition: all 0.2s;
        }
        .btn-secondary:hover {
            background: #1e293b;
        }
        
        .btn-outline {
            border: 2px solid #0f172a;
            color: #0f172a;
            font-weight: 500;
            transition: all 0.2s;
        }
        .btn-outline:hover {
            background: #0f172a;
            color: #fff;
        }
        
        .btn-danger {
            background: #ef4444;
            color: #fff;
            font-weight: 500;
            transition: all 0.2s;
        }
        .btn-danger:hover {
            background: #dc2626;
        }
        
        .card {
            background: #fff;
            border-radius: 12px;
            box-shadow: 0 2px 8px rgba(0,0,0,0.06);
        }
        
        .input-field {
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.2s;
        }
        .input-field:focus {
            border-color: #3B82F6;
            box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.2);
            outline: none;
        }
        
        .table-row:hover {
            background: #f8fafc;
        }
        
        /* Modal */
        .modal-backdrop {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.5);
            z-index: 9998;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.2s;
        }
        .modal-backdrop.active {
            opacity: 1;
            visibility: visible;
        }
        .modal-content {
            background: #fff;
            border-radius: 16px;
            padding: 2rem;
            max-width: 400px;
            width: 90%;
            transform: scale(0.9);
            transition: all 0.2s;
        }
        .modal-backdrop.active .modal-content {
            transform: scale(1);
        }
        
        /* Toast */
        .toast-container {
            position: fixed;
            top: 1rem;
            right: 1rem;
            z-index: 9999;
        }
        .toast {
            padding: 1rem 1.25rem;
            border-radius: 10px;
            color: #fff;
            font-weight: 500;
            display: flex;
            align-items: center;
            gap: 0.75rem;
            margin-bottom: 0.5rem;
            animation: slideIn 0.3s ease;
        }
        .toast-success { background: #27ae60; }
        .toast-error { background: #e74c3c; }
        
        @keyframes slideIn {
            from { transform: translateX(100%); opacity: 0; }
            to { transform: translateX(0); opacity: 1; }
        }
    </style>
    
    {% block stylesheets %}{% endblock %}
</head>
<body>
    {% block body %}{% endblock %}
    
    <div id="toastContainer" class="toast-container"></div>
    
    <!-- Delete Modal -->
    <div id="deleteModal" class="modal-backdrop">
        <div class="modal-content text-center">
            <div class="w-16 h-16 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-4">
                <i class="fas fa-trash-alt text-red-500 text-2xl"></i>
            </div>
            <h3 class="text-xl font-bold text-gray-800 mb-2">Delete Taxi?</h3>
            <p class="text-gray-500 mb-6">This action cannot be undone.</p>
            <div class="flex gap-3 justify-center">
                <button onclick="closeDeleteModal()" class="px-5 py-2.5 btn-outline rounded-lg">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="px-5 py-2.5 btn-danger rounded-lg">
                        <i class="fas fa-trash-alt mr-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            AOS.init({ duration: 400, once: true, offset: 20 });
        });
        
        function showToast(message, type = 'success') {
            const container = document.getElementById('toastContainer');
            const toast = document.createElement('div');
            toast.className = `toast toast-${type}`;
            toast.innerHTML = `<i class="fas ${type === 'success' ? 'fa-check-circle' : 'fa-times-circle'}"></i><span>${message}</span>`;
            container.appendChild(toast);
            setTimeout(() => toast.remove(), 3000);
        }
        
        function openDeleteModal(url) {
            document.getElementById('deleteForm').action = url;
            document.getElementById('deleteModal').classList.add('active');
        }
        
        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.remove('active');
        }
        
        document.getElementById('deleteModal').addEventListener('click', function(e) {
            if (e.target === this) closeDeleteModal();
        });
    </script>
    
    {% block javascripts %}{% endblock %}
</body>
</html>
